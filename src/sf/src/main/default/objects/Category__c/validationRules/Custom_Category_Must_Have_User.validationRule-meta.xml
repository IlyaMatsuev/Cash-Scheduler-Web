<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Custom_Category_Must_Have_User</fullName>
    <active>true</active>
    <errorConditionFormula>IsCustom__c &amp;&amp; (ISBLANK(User__c) || ISNULL(User__c))</errorConditionFormula>
    <errorDisplayField>User__c</errorDisplayField>
    <errorMessage>The custom category must have a user assigned</errorMessage>
</ValidationRule>
